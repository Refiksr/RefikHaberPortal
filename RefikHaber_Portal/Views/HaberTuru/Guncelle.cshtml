@model HaberTuru

@{
    ViewData["Title"] = "Güncelle";



    Layout = "_layoutAdminLTE";
}

<form method="post">
    <div class="container" style="margin-left:275px;margin-top:30px">

        <div class="row pb-3">
            <h2 class="text-primary">Kategori Güncelle</h2>
            </hr>
        </div>

        <div class="mb-3">
            <label asp-for="Ad" class="p-0"></label>
            <input asp-for="Ad" class="form-control" />
            <span asp-validation-for="Ad" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-lg btn-primary" style="width:300px">Güncelle</button>

        <a asp-controller="HaberTuru" asp-action="Index" class="btn btn-lg btn-primary" style="width:300px">
            Geri Dön
        </a>
    </div>
</form>

