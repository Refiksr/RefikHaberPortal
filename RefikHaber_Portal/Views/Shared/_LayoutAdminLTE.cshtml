                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="/adminLayoutPhotos/admin.jpg" class="img-circle elevation-2" alt="Admin Image">
                    </div>
