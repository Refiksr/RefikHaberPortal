</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <!-- Preloader -->
        <div class="preloader flex-column justify-content-center align-items-center">
            <img class="animation__shake" src="~/logo.png" alt="Refik Haber Logo" height="400" width="400">
        </div>

        <!-- Navbar -->
       
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="@Url.Action("", "")" class="brand-link">
                <img src="/adminLayoutPhotos/egitimPortali.png" alt="Egitim Portalı Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
